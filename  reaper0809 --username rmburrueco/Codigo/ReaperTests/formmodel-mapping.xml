<?xml version="1.0"?>

<mapping>
	<description>Description of the mapping</description>
	<class name="org.lsi.us.es.reaper.FormLanguage.Form"  >
		<map-to xml="formModel"/>

		<field name="identificationUrl" type="string" required="true" nillable="false">
			<bind-xml name="identificationUrl" node="attribute"/>
		</field>

		<field name="fields" type="org.lsi.us.es.reaper.FormLanguage.Field" collection="arraylist" required="true" nillable="false">
			<bind-xml auto-naming="deriveByClass" node="element"  location="fields"/>
		</field>

		<field name="reachFormMethod" type="org.lsi.us.es.reaper.FormLanguage.ReachFormMethod" required="true" nillable="false">
			<bind-xml auto-naming="deriveByClass" node="element" location="reachFormMethod"/>
		</field>

		<field name="submit" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false">
			<bind-xml auto-naming="deriveByClass" node="element" location="submitLocator"/>
		</field>

		<field name="results" type="org.lsi.us.es.reaper.FormLanguage.Result" required="true" nillable="false" collection="arraylist">
			<bind-xml name="result" node="element" location="results"/>
		</field>

	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.HttpGetRequest">
		<map-to xml="httpGetRequest"/>
		<field name="requestUrl" type="string" required="true" nillable="false">
			<bind-xml name="requestUrl" node="attribute"/>
		</field>
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Result">
		<map-to xml="result"/>
		<field name="actions" type="org.lsi.us.es.reaper.FormLanguage.Action" required="true" nillable="false" collection="arraylist">
			<bind-xml auto-naming="deriveByClass" node="element" />
		</field>

		<field name="contentRegExp" type="string">
			<bind-xml name="contentRegExp" node="attribute"/>
		</field>

		<field name="urlRegExp" type="string">
			<bind-xml name="urlRegExp" node="attribute"/>
		</field>
	</class>

<!--@@@@@@@@@@@@@@@ Actions @@@@@@@@@@@@@@@@@@@@@@@@@@@-->

	<class name="org.lsi.us.es.reaper.FormLanguage.Store">
		<map-to xml="action-store"/>
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Classify">
		<map-to xml="action-classify"/>

		<field name="tag" type="string" required="true" nillable="false">
			<bind-xml name="tag" node="attribute"/>
		</field>
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Discard">
		<map-to xml="action-discard"/>
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.IterateHub">
		<map-to xml="action-iterateHub"/>

		<field name="nextPage" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false">
			<bind-xml auto-naming="deriveByClass" node="element" location="nextPage"/>
		</field>

		<field name="product" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false">
			<bind-xml auto-naming="deriveByClass" node="element" location="product"/>
		</field>
	</class>



<!--@@@@@@@@@@@@@@@ Locators @@@@@@@@@@@@@@@@@@@@@@@@@@@-->

	<class name="org.lsi.us.es.reaper.FormLanguage.Locators.Text">
		<map-to xml="locator-text" />
		<field name="value" type="string" required="true" nillable="false">
			<bind-xml node="attribute"/>
		</field>
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Locators.Id">
		<map-to xml="locator-id" />
		<field name="value" type="string" required="true" nillable="false">
			<bind-xml node="attribute"/>
		</field>
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Locators.Name">
		<map-to xml="locator-name" />
		<field name="value" type="string" required="true" nillable="false">
			<bind-xml node="attribute"/>
		</field>
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Locators.Xpath">
		<map-to xml="locator-xpath" />
		<field name="value" type="string" required="true" nillable="false">
			<bind-xml node="attribute"/>
		</field>
	</class>



<!--@@@@@@@@@@@@@@@ Fields @@@@@@@@@@@@@@@@@@@@@@@@@@@-->

	<class name="org.lsi.us.es.reaper.FormLanguage.Fields.Textbox" >
		<map-to xml="textBox" />
		
		<field name="locator" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false" >
			<bind-xml auto-naming="deriveByClass" node="element" />
		</field>
		
		<field name="fieldId" type="string" required="true" nillable="false">
			<bind-xml name="fieldId" node="attribute"/>
		</field>
		<field name="required" type="boolean"  nillable="false">
			<bind-xml name="required" node="attribute"/>
		</field>	
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Fields.Hidden" auto-complete="true">
		<map-to xml="hidden" />
		
		<field name="locator" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false">
			<bind-xml auto-naming="deriveByClass" node="element" location="Locator"/>
		</field>

		<field name="fieldId" type="string" required="true" nillable="false">
			<bind-xml name="fieldId" node="attribute"/>
		</field>
		<field name="required" type="boolean"  nillable="false">
			<bind-xml name="required" node="attribute"/>
		</field>		
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Fields.Checkbox" auto-complete="true">
		<map-to xml="checkBox" />

		<field name="locator" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false">
			<bind-xml name="Locator" node="element" />
		</field>

		<field name="fieldId" type="string" required="true" nillable="false">
			<bind-xml name="fieldId" node="attribute"/>
		</field>
		<field name="required" type="boolean"  nillable="false">
			<bind-xml name="required" node="attribute"/>
		</field>		
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Fields.Select" auto-complete="true">
		<map-to xml="select" />

		<field name="locator" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false">
			<bind-xml name="Locator" node="element" />
		</field>

		<field name="fieldId" type="string" required="true" nillable="false">
			<bind-xml name="fieldId" node="attribute"/>
		</field>
		<field name="required" type="boolean"  nillable="false">
			<bind-xml name="required" node="attribute"/>
		</field>		</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Fields.Radiogroup" auto-complete="true">
		<map-to xml="radioGroup" />

		<field name="locator" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false">
			<bind-xml name="Locator" node="element" />
		</field>

		<field name="fieldId" type="string" required="true" nillable="false">
			<bind-xml name="fieldId" node="attribute"/>
		</field>
		<field name="required" type="boolean"  nillable="false">
			<bind-xml name="required" node="attribute"/>
		</field>	
	</class>

	<class name="org.lsi.us.es.reaper.FormLanguage.Fields.List" auto-complete="true">
		<map-to xml="list" />

		<field name="locator" type="org.lsi.us.es.reaper.FormLanguage.Locator" required="true" nillable="false">
			<bind-xml name="Locator" node="element" />
		</field>

		<field name="fieldId" type="string" required="true" nillable="false">
			<bind-xml name="fieldId" node="attribute"/>
		</field>
		<field name="required" type="boolean"  nillable="false">
			<bind-xml name="required" node="attribute"/>
		</field>	
	</class>

</mapping>
